{
  "name": "multi-chat",
  "version": "0.1.0",
  "description": "Multi-service webapp wrapper",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux deb"
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.multichat.app",
    "productName": "Multi Chat",
    "files": [
      "electron/**/*",
      "renderer/**/*",
      "build/icons/**",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Internet",
      "icon": "build/icons/256x256.png"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": "nsis",
      "signAndEditExecutable": false
    }
  }
}
